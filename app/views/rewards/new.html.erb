<div class="container">
  <div class="row">
    <div class="col">
      <div class="form-container">
        <div class="container-header text-center">
          <h1>Nouvelle récompense pour l'équipe <span style="color: red;"><%= @team.name %></span></h1>
        </div>

        <div class="card form-input">
          <%= simple_form_for [@team, @reward], html: { class: 'form' } do |f| %>
            <div class="form-inputs">
              <%= f.input :name, label: "Nom de la récompense" %>
              <%= f.input :goal, label: "Objectif" %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, 'Créer Récompense', class: 'btn btn-orange' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
