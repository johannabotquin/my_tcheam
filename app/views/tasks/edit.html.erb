<%= simple_form_for @task do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :category, collection: Task::CATEGORIES %>
  <%= f.input :reccurence, as: :boolean %>
  <%= f.input :points %>
  <%= f.input :deadline %>
  <%= f.input :achieved %>
  <%= f.input :priority_tag, collection: Task::PRIORITY %>

  <%= f.button :submit %>
<% end %>
