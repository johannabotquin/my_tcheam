<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form-container">
        <div class="container-header text-center">
          <h1>Modifier le Souvenir</h1>
        </div>
        <div class="card form-input">
          <%= simple_form_for @memorie do |f| %>
            <div class="form-inputs mb-5">
              <%= f.input :name, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
              <%= f.input :content, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
              <%= f.input :date, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
              <%= f.input :photo, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
              <%= f.button :submit, "modifier", class: 'btn btn-orange' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
